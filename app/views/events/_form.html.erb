<%= form_with(model: event) do |form| %>
  <% if event.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<%# create a drop down list for all existing calendar names %>
  <div>
    <%= form.label :calendar_name, style: "display: block" %>
    <%= form.select :calendar_name, Calendar.all.collect{|calendar| [calendar.calendar_name, calendar.id]}, include_blank: true %>  
  </div>

<%# change it to drop-down for category %>
  <div>
    <%= form.label :event_category, style: "display: block" %> 
    <%= form.select :event_category, ['Course','Holiday','Assignment']%>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
