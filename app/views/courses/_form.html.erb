<div class="container event-box" align="center">
  <%= form_with(model: course) do |form| %>
    <% if course.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(course.errors.count, "error") %> prohibited this course from being saved:</h2>

        <ul>
          <% course.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="input-group input-group-sm mb-3">
      <%= form.label :calendar_id, style: "display: block" %>
      <%= form.select :calendar_id, Calendar.all.collect { |calendar| [calendar.calendar_name, calendar.id]}, include_blank:true %>
    </div>

    <div class="input-group input-group-sm mb-3">
      <span class='input-group-text'>Name</span>
      <%= form.text_field :name %>
    </div>

    <div class="input-group input-group-sm mb-3">
      <%= form.label :start_date, style: "display: block" %>
      <%= form.date_field :start_date %>
    </div>

    <div class="input-group input-group-sm mb-3">
      <%= form.label :end_date, style: "display: block" %>
      <%= form.date_field :end_date %>
    </div>

    <div class="input-group input-group-sm mb-3">
      <%= form.label :location, style: "display: block" %>
      <%= form.text_field :location %>
    </div>

    <div class="input-group input-group-sm mb-3">
      <%= form.label :professor_name, style: "display: block" %>
      <%= form.text_field :professor_name %>
    </div>

    <div>
      <%= form.label :repetition_frequency, style: "display: block" %>
      <% days_of_week = ["M", "T", "W", "Th", "F", "Sa", "Su"] %>
      <% choices = [] %>
      
      <%= form.select(choices, days_of_week.each {|day| day }, {:prompt => "Please Select"}, {:multiple => true, :size => 5}) %>
    </div>

    <div class="input-group input-group-sm mb-3">
      <%= form.submit :Update, class:"btn btn-lg btn-primary" %>
    </div>
    
  <% end %>
</div>